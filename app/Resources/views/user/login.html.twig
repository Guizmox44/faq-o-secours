{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container form-container mt-5">
        <h2 class="mt-3 mb-2">Connexion</h2>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mt-5 col-8 col-lg-6 mx-auto">
            <form class="mt-5" action="{{ path('login') }}" method="post">
                <label for="username">Pseudo:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />

                <label class="mt-3" for="password">Mot de passe:</label>
                <input class="form-control" type="password" id="password"  name="_password" />
                <input type="hidden" name="_target_path" value="/account" />


                <button class="mt-3 mb-2 btn-info" type="submit">Se connecter</button>
            </form>
        </div>

        <hr>

        <p class="pb-3">Pas encore inscrit ? <a href="{{ path('signin') }}">S'inscrire</a></p>
        <p class="pb-3">Mot de passe oublié ? <a href="#">Réinitialiser le mot de passe</a></p>
    </div>
{% endblock %}